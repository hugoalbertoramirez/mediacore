@model mediacore.ViewModels.ViewModelImportantNews

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>ImportantNews</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="importantNews.IdUser" class="control-label"></label>
                <select asp-for="importantNews.IdUser" class ="form-control" asp-items="ViewBag.IdUser"></select>
            </div>
            <div class="form-group" >
                <label asp-for="importantNews.IdNews" class="control-label" ></label>
                <input asp-for="importantNews.IdNews" class="form-control disabled"  />
            </div>
            <div class="form-group">
                @if (ViewBag.Exists)
                {
                    <input type="submit" value="Create" class="btn btn-default" disabled="disabled"/>
                    <a asp-action="Delete" asp-route-id="@ViewBag.Id">Delete</a>
                }
                else
                {
                    <input type="submit" value="Create" class="btn btn-default"  />
                }
            </div>
        </form>


    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
